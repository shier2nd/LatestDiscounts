<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             style="@style/matchParentLayoutParam">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_discount_items_recycler_view"
        style="@style/matchParentLayoutParam"
        android:scrollbars="vertical"/>

    <ProgressBar
        android:id="@+id/fragment_progress_bar"
        style="@style/wrapContentLayoutParam"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/no_items_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/no_result_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

</FrameLayout>