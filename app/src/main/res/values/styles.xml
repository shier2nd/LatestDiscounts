<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="matchParentLayoutParam">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrapContentLayoutParam">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="heightWrapContentLayoutParam">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cardStyle" parent="heightWrapContentLayoutParam">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="cardRelativeLayoutStyle" parent="matchParentLayoutParam">
        <!--<item name="android:layout_margin">8dp</item>-->
    </style>

    <style name="cardImageViewStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="baseCardProductInfoStyle" parent="heightWrapContentLayoutParam">
        <item name="android:layout_toLeftOf">@id/card_share_overflow</item>
        <item name="android:layout_toRightOf">@id/thumbnail_image</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="baseCardTextStyle" parent="baseCardProductInfoStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="cardProductTitleStyle" parent="baseCardTextStyle">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="cardProductPriceStyle" parent="baseCardTextStyle">
        <item name="android:layout_below">@id/product_title</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="cardProductOtherInfoStyle" parent="baseCardProductInfoStyle">
        <item name="android:layout_below">@id/product_price</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="cardOverflowIconStyle">
        <item name="android:contentDescription">@string/share_this_product</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_card_overflow</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="baseViewProductOtherInfoStyle" parent="wrapContentLayoutParam">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="viewProductOtherInfoTextStyle" parent="baseViewProductOtherInfoStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorTextIconGray</item>
    </style>

    <style name="viewProductOtherInfoImageStyle" parent="baseViewProductOtherInfoStyle">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

</resources>
